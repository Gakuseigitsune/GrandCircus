@model Usr
@{
    ViewData["Title"] = "Ask a question";
}

<!------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------->

<center>
<div style=" padding: 15px 15px 15px 15px; background: none; border-radius:30px; border-color:#070707; border:double; width:max-content;">




    <form method="post" action="/UserControls/PostQ">



        <table>

            <tr>

                <td  class="detail" colspan="1"><b>Username:</b><br /><input value="@Model.Username" name="Username" readonly="readonly" /></td>
                <td  class="detail" colspan="1"><b>Title:</b><br /><input type="text" name="Title" placeholder="(Title of question)" required="required" /></td>

                <td  class="detail" colspan="1"><b>Category: </b><br /> <i> <input type="text" name="Category" placeholder="(category)" /></i></td>




                <td  class="detail"><b>Posted: </b><br /> <input type="datetime" value="@DateTime.Now" name="Posted" readonly="readonly" required="required" /></td>

            </tr>

            <tr>
                <td style="border:none; padding: 30px; text-align:center; border-radius: 50px;" colspan="4">
                    <b>Question</b><br /><br /><textarea id="Detail" name="Detail" rows="10" cols="120" maxlength="249"></textarea>
                </td>
            </tr>

            <tr>
                <td class="tags" colspan="4" style="padding: 10px 10px 10px 10px;"><b>tags: </b><input type="text" name="Tags" placeholder="(separate tags with spaces)" /></td>
            </tr>

        </table>
        <br />
        <center><input type="submit" value="Post" /></center>


    </form>


</div>
</center>


